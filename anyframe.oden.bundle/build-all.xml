	<target name="pack.all">	
		<condition property="pkname" else="Anyframe-Oden-${version}-bin.zip">
			<isset property="pkname"/>
		</condition>
		<condition property="server.target" else="_pack.server">
			<isset property="server.target"/>
		</condition>
		
		<delete dir="pack" includes="agent.zip,server.zip,${pkname}"/>
		
		<antcall target="build.all"/>
		
		<antcall target="_pack.agent"/>
		<zip destfile="pack/agent.zip">
			<zipfileset dir="pack" includes="bin/*.sh" filemode="754"/>
			<zipfileset dir="pack" includes="bin/**,bundle/**,readme" excludes="bin/*.sh"/>
		</zip>
		
		<antcall target="${server.target}"/>
		<zip destfile="pack/server.zip">
			<zipfileset dir="pack" includes="bin/*.sh" filemode="754"/>
			<zipfileset dir="pack" includes="bin/**,bundle/**,conf/**,docs/**,readme" excludes="bin/*.sh"/>
		</zip>
		
		<zip destfile="pack/${pkname}"
				basedir="pack" includes="agent.zip,server.zip"/>
		
		<delete dir="pack" includes="agent.zip,server.zip" />
	</target>
		
	<target name="pack.src.all">
		<property name="pkname" value="Anyframe-Oden-${version}-src.zip"/>
		<property name="todo" value="all-local-src"/>
		<antcall target="pack.all"/>
	</target>
		
	<target name="pack.ent.all">
		<property name="pkname" value="Anyframe-Oden-Enterprise-${version}-bin.zip"/>
		<property name="server.target" value="_pack.ent.server"/>
		<antcall target="pack.all"/>
	</target>
	
	<target name="test">
		<delete file="pack/test.zip"/>
		<zip destfile="pack/test.zip">
			<zipfileset dir="pack" includes="bin/*.sh" filemode="754"/>
			<zipfileset dir="pack" includes="bin/**,bundle/**,readme" excludes="bin/*.sh"/>
		</zip>
	</target>
