<?xml version="1.0" encoding="UTF-8"?>
<component name="SpectrumCommand" immediate="true" >
	<implementation class="anyframe.oden.bundle.samsunglife.SpectrumCommandImpl"/>
	<service>
		<provide interface="org.ungoverned.osgi.service.shell.Command"/>
	</service>
	<reference name="REPOSITORY_PROVIDER_SERVICE"
         interface="anyframe.oden.bundle.core.RepositoryProviderService"
         cardinality="1..1"
         policy="dynamic"
         bind="setRepositoryProvider"
   />
   <reference name="ODEN_CONFIG_SERVICE"
         interface="anyframe.oden.bundle.core.config.OdenConfigService"
         cardinality="1..1"
         policy="dynamic"
         bind="setConfigService"
   />
  <reference name="SPECTRUM_NOTIFIER"
         interface="anyframe.oden.bundle.samsunglife.SpectrumNotifier"
         cardinality="1..1"
         policy="dynamic"
         bind="setSpectrumNotifier"
   />
   <reference name="DEPLOY_LOG_SERVICE"
		interface="anyframe.oden.bundle.core.record.DeployLogService"
		cardinality="1..1"
		policy="dynamic"
		bind="setDeployLogService"
	/>
	<reference name="JOB_MANAGER"
         interface="anyframe.oden.bundle.core.job.JobManager"
         cardinality="1..1"
         policy="dynamic"
         bind="setJobManager"
   />
</component>
