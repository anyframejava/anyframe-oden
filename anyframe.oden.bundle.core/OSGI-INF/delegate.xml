<?xml version="1.0" encoding="UTF-8"?>
<component name="Delegate" immediate="true">
   <implementation class="anyframe.oden.bundle.core.DelegateImpl"/>
   <service>
      <provide interface="anyframe.oden.bundle.core.DelegateService"/>
   </service>
   <reference name="REPOSITORY_SERVICE"
         interface="anyframe.oden.bundle.repository.RepositoryService"
         cardinality="0..n"
         policy="dynamic"
         bind="addRepositoryService"
         unbind="removeRepositoryService"
   />
   <reference name="TRANSMITTER_SERVICE"
         interface="anyframe.oden.bundle.core.txmitter.TransmitterService"
         cardinality="0..1"
         policy="dynamic"
         bind="setTransmitterService"
         unbind="unsetTransmitterService"
   />
   <reference name="DEPLOY_LOG_SERVICE"
         interface="anyframe.oden.bundle.core.record.DeployLogService"
         cardinality="0..1"
         policy="dynamic"
         bind="setDeployLogService"
         unbind="unsetDeployLogService"
   />
</component>   

