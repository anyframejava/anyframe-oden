<project name="Oden Build Install" default="jar" basedir=".">
	<property name="version" value="1.3.0" />

	<property name="src.dir" value="src" />
	<property name="properties.dir" value="src/main/java" />
	<property name="target.dir" value="target" />
	<property name="jar.dir" value="jar" />

	<target name="clean" description="Delete all generated files">
		<delete dir="${target.dir}" failonerror="false" />
		<delete file="${jar.dir}/anyframe.oden.ant.jar" />
	</target>

	<target name="compile" description="Compiles the Task" depends="clean">
		<mkdir dir="${target.dir}"/>
		<mkdir dir="${jar.dir}"/>
		<javac srcdir="${src.dir}" destdir="${target.dir}">
			<classpath>
				<pathelement location="lib/ant.jar"/>
			</classpath>
		</javac>
		<copy file="${properties.dir}/oden-task.properties" todir="${target.dir}"/>
		<copy file="${properties.dir}/oden-type.properties" todir="${target.dir}"/>
	</target>

	<target name="jar" description="JARs the Task" depends="compile">
		<jar destfile="${jar.dir}/anyframe.oden.ant.jar" basedir="${target.dir}" />
	</target>

</project>
