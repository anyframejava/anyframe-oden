<project name="Oden Build Test" default="oden" basedir=".">

	<path id="jarpath">
		<pathelement location="${basedir}/" />
		<fileset dir="jar/">
			<include name="*.jar" />
		</fileset>
	</path>

	<taskdef resource="oden-task.properties" classpathref="jarpath" />
	<typedef resource="oden-type.properties" classpathref="jarpath" />

	<target name="oden" description="Use the Task">

		<oden-task id="oden" pw="oden0" server="localhost" port="9860" failundo="true">
			<deploy updateonly="false" repository="file://C:/devel/java/jdk1.5.0_22" includes="*.zip">
				<agent name="agent1" path="c" />
			</deploy>
				<!--
